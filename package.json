{
  "name": "@ducanh2912/next-pwa-project",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**",
    "examples/**",
    "!examples/**/.next"
  ],
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 turbo run build --filter=!@next-pwa-example/*",
    "deps": "node ncu.js",
    "dev": "cross-env FORCE_COLOR=1 turbo run dev --parallel --filter=!@next-pwa-example/*",
    "examples:build": "cross-env FORCE_COLOR=1 turbo run build --filter=@next-pwa-example/*",
    "examples:dev": "cross-env FORCE_COLOR=1 turbo run dev --parallel --filter=@next-pwa-example/*",
    "examples:lint": "cross-env FORCE_COLOR=1 turbo run lint --parallel --filter=@next-pwa-example/*",
    "format": "prettier --write .",
    "lint": "cross-env FORCE_COLOR=1 turbo run lint --parallel --filter=!@next-pwa-example/*",
    "lint-staged": "lint-staged",
    "new-changeset": "changeset",
    "prepare": "husky install",
    "publish-packages": "pnpm typecheck && pnpm lint && pnpm build && changeset publish",
    "typecheck": "cross-env FORCE_COLOR=1 turbo run typecheck"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.1",
    "@ducanh2912/next-pwa": "workspace:*",
    "@ducanh2912/next-sw": "workspace:*",
    "@types/node": "20.1.1",
    "@types/shell-quote": "1.7.1",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "cross-env": "7.0.3",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsdoc": "44.0.2",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "fast-glob": "3.2.12",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "npm-check-updates": "16.10.10",
    "prettier": "2.8.8",
    "rimraf": "5.0.0",
    "shell-quote": "1.8.1",
    "tslib": "2.5.0",
    "turbo": "1.9.3",
    "typescript": "5.1.0-dev.20230509",
    "webpack": "5.82.0"
  },
  "packageManager": "pnpm@8.3.0"
}
